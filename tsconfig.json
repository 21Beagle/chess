{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "lib": [
      "es6",
      "dom",
      "es2022",
      "ES2023.Array",
      "es2017",
    ],
    "module": "ES2022",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "decs.d.ts",
    "src/searchWorker.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}